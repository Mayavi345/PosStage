<Window x:Class="Stage.Backstage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stage.Backstage"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080" Background="White"  ResizeMode="NoResize" AllowDrop="True" WindowStartupLocation="CenterScreen"   >
    <Grid>
        <ContentPresenter Content="{Binding MyUserControlInstance,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
    </Grid>
</Window>
